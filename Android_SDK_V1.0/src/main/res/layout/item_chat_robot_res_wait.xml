<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/contentLy"
        style="@style/fromLayoutStyle"
        android:layout_below="@+id/timeView">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/headView"
            style="@style/fromHeadViewStyle" />

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_toRightOf="@id/headView"
            style="@style/fromContentLayoutStyle"
            android:layout_width="100dp">

            <ImageView
                android:id="@+id/ivDot1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/dot_black"/>

            <ImageView
                android:id="@+id/ivDot2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ivDot1"
                android:src="@drawable/dot_black"/>

            <ImageView
                android:id="@+id/ivDot3"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/ivDot2"
                android:src="@drawable/dot_black"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>