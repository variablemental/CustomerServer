<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/custom_bar_style</item>
    </style>
    
    <style name="custom_bar_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#00a69c</item>
    </style>

    <style name="tab_button_bg">
        <item name="android:textAppearance">@style/tab_text_color</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:background">@drawable/tab_bg</item>-->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">20px</item>
    </style>

    <style name="tab_text_color">
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textSize">12dp</item>
        <!-- 从左向右跑马灯效果 -->
        <item name="android:ellipsize">marquee</item>
        <!-- 单行显示 -->
        <item name="android:singleLine">true</item>
    </style>

    <style name="component_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/naive_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="contentPadding">
        <item name="android:paddingRight">5.7dp</item>
        <item name="android:paddingTop">5.7dp</item>
        <item name="android:paddingBottom">5.7dp</item>
        <item name="android:layout_marginLeft">2.85dp</item>
    </style>
    <style name="toContentLayoutStyles"
        parent="contentLayoutStyle">
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:background">@drawable/ic_chat_rights</item>
    </style>

    <style name="toContentLayoutStyles2"
        parent="contentLayoutStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:background">@drawable/ic_chat_lefts</item>
    </style>

</resources>
