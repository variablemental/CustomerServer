<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@android:id/tabhost"
    >

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.coder_z.thousandleaves.MainActivity"
        android:weightSum="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="517dp"
            android:id="@android:id/tabcontent"
            ></FrameLayout>

        <TabWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@android:id/tabs">

        </TabWidget>

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:id="@+id/radio_group">

        <RadioButton
            android:checked="true"
            android:text="@string/text_home"
            android:textColor="@color/tab_text"
            android:id="@+id/main"
            android:drawableTop="@drawable/ic_view_headline_black_24dp"
            style="@style/tab_button_bg" />

        <RadioButton
            android:text="@string/text_recognition"
            android:textColor="@color/tab_text"
            android:id="@+id/recognition"
            style="@style/tab_button_bg"
            android:drawableTop="@drawable/ic_recognition_black_24dp"
            android:layout_width="0dp" />

        <RadioButton
            android:text="@string/text_browser"
            android:textColor="@color/tab_text"
            android:id="@+id/browser"
            android:drawableTop="@drawable/ic_browser_black_24dp"
            style="@style/tab_button_bg" />

        <RadioButton
            android:text="@string/text_setting"
            android:textColor="@color/tab_text"
            android:id="@+id/setting"
            android:drawableTop="@drawable/ic_toc_black_24dp"
            style="@style/tab_button_bg"/>

    </RadioGroup>
</TabHost>